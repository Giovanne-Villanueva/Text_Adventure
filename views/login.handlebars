
{{#if signUp}}
  <div class="flex flex-wrap flex-col justify-center content-center">
  <h2 class="text-center text-base sm:text-xl">Sign Up Form</h2>

  <form class="form signup-form w-5/6 md:w-1/2 xl:w-1/3">
    <div class="form-group w-full my-3">
      <label class="text-sm md:text-base block md:inline-block w-3/12 xl:w-1/5 " for="name-signup">Username:</label>
      <input class="text-black form-input w-full md:w-8/12 xl:w-4/6" type="text" id="name-signup" />
    </div>
    <div class="form-group w-full my-3">
      <label class="text-sm md:text-base block md:inline-block w-3/12 xl:w-1/5 " for="email-signup">email:</label>
      <input class="text-black form-input w-full md:w-8/12 xl:w-4/6" type="text" id="email-signup" />
    </div>
    <div class="form-group w-full my-3">
      <label class="text-sm md:text-base block md:inline-block w-3/12 xl:w-1/5" for="password-signup">password:</label>
      <input class="text-black form-input w-full md:w-8/12 xl:w-4/6" type="password" id="password-signup" />
    </div>
    <div class="form-group">
      <button class="w-full p-2 rounded-md bg-cyan-700 text-center text-white btn btn-primary" type="submit" >Sign Up</button>
    </div>
  </form>
  <a class="text-center w-5/6 md:w-1/2 xl:w-1/3 p-2 my-3 rounded-md bg-cyan-700" href="/login">Login instead</a>
</div>

{{else}}
<div class="flex flex-wrap flex-col justify-center content-center">

  <h2 class="text-center text-base sm:text-xl">Login</h2>

  <form class="form login-form w-5/6 md:w-1/2 xl:w-1/3">
    <div class="form-group w-full my-3">
      <label class="text-sm md:text-base block md:inline-block w-3/12 xl:w-1/5" for="email-login">email: </label>
      <input class="text-black form-input w-full md:w-8/12 xl:w-4/6" type="text" id="email-login" />
    </div>
    <div class="form-group w-full my-3">
      <label class="text-sm md:text-base block md:inline-block w-3/12 xl:w-1/5" for="password-login">password:</label>
      <input class="text-black form-input w-full md:w-8/12 xl:w-4/6" type="password" id="password-login" />
    </div>
    <div class="form-group">
      <button class="w-full p-2 rounded-md bg-cyan-700 text-center text-white btn btn-primary" type="submit">login</button>
    </div>
  </form>
  <a class="text-center w-5/6 md:w-1/2 xl:w-1/3 p-2 my-3 rounded-md bg-cyan-700" href="/signUp">Sign Up instead </a>
</div>


{{/if}}

<script src="/js/login.js"></script>